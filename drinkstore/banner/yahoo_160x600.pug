include assets/yahoo_160x600/_includes/var.pug

doctype html
html
	head
		block head
			+link("example.css")
			+link("tweenjs.css")
			+link("style.css")
			+script("examples.js")
			+script("tweenjs-NEXT.min.js")
			+script("CSSPlugin.js")
			//[if IE] <link href="/css/ie.css" media="screen, projection" rel="stylesheet" type="text/css" /> [endif]
		script#editable.
			
				var w=160;
				var h=600;
				
			function init() {
				createjs.CSSPlugin.install(createjs.Tween);
				var content = document.getElementById("scene__1");
				var bg_scene = document.getElementById("bg_scene");
				var drink_infos = document.getElementById("drink__infos");
				var nome_drink = document.getElementById("nome_drink");
				var boom = document.getElementById("boom");
				var frase_1 = document.getElementById("infos__frase_1");
				var frase_2 = document.getElementById("infos__frase_2");
				var frase_3 = document.getElementById("infos__frase_3");
				var boom_1 = document.getElementById("boom__item_1");
				var boom_2 = document.getElementById("boom__item_2");
				var conheca = document.getElementById("conheca");
				

				var nome_drink = 
							createjs.Tween.get(nome_drink, {loop: false})
							.to({ left: -w }, 0).wait(2000)
							.to({ left: 0 },350, createjs.Ease.quintOut).wait(300)
							.play(frase1)
				var frase1 = 
							createjs.Tween.get(frase_1, {loop: false})
							.to({ left: -w*2 }, 0).wait(1400)
							.to({ left: 20 },400, createjs.Ease.quintOut).wait(300)
							.play(frase2)
				var frase2 = 
							createjs.Tween.get(frase_2, {loop: false})
							.to({ left: -w*2 }).wait(1550)
							.to({ left: 40 },350, createjs.Ease.quintOut).wait(600)
							.play(frase3)
				var frase3 = 
							createjs.Tween.get(frase_3, {loop: false})
							.to({ left: -w*2 }).wait(1500)
							.to({ left: 20 },650, createjs.Ease.quintOut).wait(700)
							
				var boom1 = 
							createjs.Tween.get(boom_1, {loop: false})
								.to({width: 100, height: 80, opacity:0}, 10).wait(4000)
								.to({width: 160, height: 110, opacity:1, left:-30, top:-15}, 700, createjs.Ease.backOut)
								
							
				var conheca_ = 
							createjs.Tween.get(conheca, {loop: false})
								.to({opacity:0}).wait(5300)
								.to({opacity:1}, 1300, createjs.Ease.Linear)
			}
			
			
		style.
			#canvas{
				position: relative;
				width: 160px;
				height: 600px;
				margin: 0 auto;
				background: #000;
				overflow:hidden;
			}
			#canvas *{
				transition: transform .2s ease-out;
			}
			#scene__1 {
				width: 160px;
				height: 600px;
				position: absolute;
				transition: transform .2s ease-out;
				top: 0;
				left: 0;
			}
			.drink{
				position: absolute;
				z-index:2;
				bottom: 120px; 
			}
			#nome_drink{
				position: absolute;
				z-index:3;
				bottom: 140px; 
				left: -150px;
			}
			#bg_scene {
				width: 160px;
				height: 600px;
				position: absolute;
			}
			#drink__infos {
				position: absolute;
				top: 45px;
				left: 0px;
				z-index:1;
			}
			
			#infos__frase_1,#infos__frase_2,#infos__frase_3 {
				position: absolute;
				left: -320px;
			}
			#infos__frase_2 {
				top: 22px;
			}
			#infos__frase_3 {
				top: 60px;
			}
			#boom {
				position: absolute;
				left: 28px;
				top: 168px;
			}
			#boom__item_1 {
				position: relative;
			}
			#conheca {
				position: absolute;
				bottom:50px;
				right: 0px;
			}
			#link_gpa {
				position: absolute;
				bottom:14px;
				right: 45px;
				width: 67px;
				height:59px;
			}
	body(onload="init()")
		div#canvas.content
				div#scene__1
					div#bg_scene(style="background:url("+img_dir+"bg__scene.jpg); background-size: cover")
					img#nome_drink(src=img_dir+'nome_drink.png')
					img.drink(src=img_dir+'drink__caipirinha.png')
					div#drink__infos
						img#infos__frase_1(src=img_dir+'txt_aprendaos.png')
						img#infos__frase_2(src=img_dir+'txt_drinks.png')
						img#infos__frase_3(src=img_dir+'txt_erecebaosingredientes.png')
					
					div#boom
						img#boom__item_1(src=img_dir+'logo.png')
					
				a#conheca
					img(src=img_dir+'cta_conhecaagora.png')
				a#link_gpa
					img(src=img_dir+'logo_gpa.png')
