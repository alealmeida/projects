include assets/_includes/mixins.pug
include assets/_includes/var.pug

block vars
doctype html
html
	head
		block head
			+link("screen.css")
			+link("styles.css")
			+link("style.css")
			//[if IE] <link href="/css/ie.css" media="screen, projection" rel="stylesheet" type="text/css" /> [endif]
	body
		.drinkstore
		header(id="hero")&attributes(parallax)
					
				-for(n=1;n<=4;n++)
					block name_sections	
					-var comment = ( cat[id+n] )
					// 
						#{comment} 
						
					section.category(id='cat-'+n)&attributes(parallax)
						figure.effect
							img(src=img_dir+n+'__bg-base.png')/
							
						.row
							block inside_row
							if n==1 || n==3
								+article
								+aside('right')
							else
								+aside('left')
								+article
