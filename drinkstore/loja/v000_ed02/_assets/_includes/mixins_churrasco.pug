append head
	mixin link(nome)
		//-	tag link
		-var link_attr = {}
		- link_attr.href= css_dir+nome
		- link_attr.media= "screen"
		- link_attr.rel= "stylesheet"
		- link_attr.type= "text/css"
		link&attributes(link_attr)
	mixin script(nome)
		//-	tag script
		-var scr_attr = {}
		- scr_attr.src= js_dir+nome
		- scr_attr.type= "text/javascript"
		script&attributes(scr_attr)
		
mixin header
	-var video_attr={}
	-var source_attr={}
	-video_attr.class="bg_video"
	-video_attr.autoplay="autoplay"
	-video_attr.loop="loop"
	-video_attr.poster=img_dir+"header.jpg"
	-source_attr.type="video/mp4"
	-source_attr.src=media_dir+"header.mp4"
	
	video&attributes(video_attr)
		source&attributes(source_attr)
mixin menu(i)
	-var li_attr={}
	-var a_attr={}
	-var index=i
	case index
		when 1
			-li_attr.class="churrasco"
			-a_attr.href="#"
			-a_text="Churrasco"
		when 2
			-li_attr.class="no-icon"
			-a_attr.href="#caipirinha-de-limao"
			-a_text="Caipirinha <br />de Limão"
		when 3
			-li_attr.class="no-icon"
			-a_attr.href="#red-citrus"
			-a_text="Red Citrus"
		when 4
			-li_attr.class="no-icon"
			-a_attr.href="#caipiroska-de-morango"
			-a_text="Caipiroska<br /> de Morango"
		when 5
			-li_attr.class="no-icon"
			-a_attr.href="#shot-mel-limao"
			-a_text="Shot <br />Mel & Limão"
		when 6
			-li_attr.class="no-icon"
			-a_attr.href="#pronto-para-beber"
			-a_text="Pronto para beber"
	li&attributes(li_attr)
		a&attributes(a_attr). 
			!{a_text}
		
mixin content(item, type, n)
	-var tag=item
	-var i = n
	-var list={}
	-var info_value={}
	-var info_measures={}
	-var info_difficulty={}
	-var info_doses={}
	-var drink_buy={}
	-var nome_drink={}
	-var texto ={}
	-var links ={}
	-var image_drink={}
	-drink_buy.class='drink-buy'
	-drink_buy_texto='comprar'
	-drink_buy.target='_blank'
	-info_doses.class='info_doses'
	case i
		when 1
			-texto.h2= "Caipirinha de limão"
			-texto.h3= "Um clássico sempre bem-vindo"
			-texto.p= "Em um copo, coloque o limão cortado e o açúcar. Macere levemente com o auxílio de um socador, acrescente o gelo à vontade e coloque a dose de Ypióca® Ouro. Mexa delicadamente com o auxílio de uma colher bailarina."
			-drink_buy.href= "http://busca.paodeacucar.com/ppc/drinkstore_churrasco_caipirinha"
			-nome_drink.p= "Caipirinha de Limão"
			-image_drink.src = "images/churrasco/caipirinha-drink.png"
			-info_value.div= ["14.99 g"]
			-info_measures.div= ["Grad. Alcoólica"]
			-info_difficulty.div= "Fácil"
			-info_difficulty_classe= "difficulty--facil"
			-info_doses_texto= "19 doses"
			-list.li=['1 dose (50 ml) de Ypióca® Clássica™ Ouro','½ limão tahiti cortado em 4','2 colheres de açúcar','Gelo a gosto']
			
		when 2
			-texto.h2= "Red Citrus"
			-texto.h3= "Uma mistura de sabores fora do óbvio"
			-texto.p= "Encha um copo alto com gelo, adicione a dose de Johnnie Walker® Red Label® e complete com refrigerante sabor citrus."
			-drink_buy.href= "http://busca.paodeacucar.com/ppc/drinkstore_churrasco_redcitrus"
			-nome_drink.p= "Red Citrus"
			-image_drink.src = "images/churrasco/red-citrus-drink.png"
			-info_value.div= ["15.8 g"]
			-info_measures.div= ["Grad. Alcoólica"]
			-info_difficulty.div= "Fácil"
			-info_difficulty_classe= "difficulty--medio"
			-info_doses_texto= "20 doses"
			-list.li=['1 dose (50 ml) de Johnnie Walker® Red Label®', '75 ml de refrigerante citrus', 'Gelo a gosto']
			
		when 3
			-texto.h2= "Caipiroska de Morango"
			-texto.h3= "Doce e refrescante na medida certa"
			-texto.p= "Em um copo, coloque o morango cortado e o açúcar. Macere levemente com o auxílio de um socador, acrescente o gelo à vontade e coloque a dose de Smirnoff™. Mexa delicadamente com o auxílio de uma colher bailarina."
			-drink_buy.href= "http://busca.paodeacucar.com/ppc/drinkstore_churrasco_caipiroskamorango"
			-image_drink.src = "images/churrasco/caipiroska-de-morango-drink.png"
			-info_value.div= ["11.84 g"]
			-info_measures.div= ["Grad. Alcoólica"]
			-info_difficulty.div= "Fácil"
			-info_difficulty_classe= "difficulty--facil"
			-info_doses_texto= "20 doses"
			-list.li=['1 dose (50 ml) de vodca Smirnoff™','4 morangos cortados ao meio','2 colheres de açúcar','Gelo a gosto']
		when 4
			-texto.h2= "Shot Mel e Limão"
			-texto.h3= "Surpreenda na hora do shot!"
			-texto.p= "Reunião com os amigos ou com a família sempre tem um motivo pra brindar. E este momento pede uma bebida diferente! Deixe a sua garrafa de Ypióca® Mel e Limão no refrigerador por pelo menos 2 horas. Na hora do brinde, sirva doses de 50 ml em copos de shot."
			-drink_buy.href= "http://busca.paodeacucar.com/ppc/drinkstore_churrasco_shot"
			-image_drink.src = "images/churrasco/shot-mel-limao-drink.png"
			-info_value.div= ["17 %"]
			-info_measures.div= ["Grad. Alcoólica"]
			-info_difficulty.div= "Fácil"
			-info_difficulty_classe= "difficulty--facil"
			-info_doses_texto= "14 drinks"
			-list.li=[]
		when 5
			-texto.h2= "Pronto para beber"
			-texto.h3= "Sabores únicos e praticidade pra qualquer momento"
			-texto.p= "A sua turma faz o estilo prático, mas não abrem mão da qualidade? Então Smirnoff® Ice é a pedida certa! Basta escolher o sabor preferido e apreciá-la bem gelada com a galera!"
			-drink_buy.href= "http://busca.paodeacucar.com/ppc/drinkstore_churrasco_prontaparabeber"
			-image_drink.src = "images/churrasco/pronto-para-beber-drink.png"
			-info_value.div= ["5%","6%"]
			-info_measures.div= ["Grad. Alcoólica. <br/> Smirnoff® Ice ","Grad. Alcoólica. <br/> Smirnoff® Ice Storm"]
			-info_difficulty.div= "Fácil"
			-info_difficulty_classe= "difficulty--facil"
			-info_doses_texto= ""
			-list.li=[]
	
	
	-var tag_a= 'a'
	-var tag_img='img'
	-var tag_h2='h2'
	-var tag_h3='h3'
	-var tag_p='p'
	-var tag_div='div'
	-var tag_li='li'
	
	if tag== tag_li
		if type=='list'
			ul
				-var len = list.li.length
				-for(i=0;i<len;i++)
					li=list.li[i]
	if tag== tag_a
		if type=='drink_buy'
			a&attributes(drink_buy)= drink_buy_texto
	if tag== tag_div
		
		if type=='info_value'
			-var len = info_value.div.length
			-for(i=0;i<len;i++)
				.value.
					!{info_value.div[i]}
				.measures.
					!{info_measures.div[i]}
			
		else if type=='info_difficulty'
			.difficulty(class=info_difficulty_classe).
				!{info_difficulty.div} 
		else if type=='info_doses' 
			if info_doses_texto!=''
				div&attributes(info_doses).
					1 garrafa <br />
					<span>= <br />
					!{info_doses_texto} </span> 
				
	if tag==tag_p && type=="nome_drink"
		p
			span •
			= (nome_drink[tag])
	else
		if type=="texto"
			#{tag}.
				!{texto[tag]}
		else if  type=="image_drink"	
			img&attributes(image_drink)/
			
				

mixin estrutura(n)
	-var hash={}
	-var i = n
	case i
		when 1
			-hash.id= "caipirinha-de-limao"
			-item_class='container drink-item clearfix'
			-details_class='drink-details drink-details--item'
			-info_class='drink-info drink-info--right'
		when 2
			-hash.id= "red-citrus"
			-item_class='container drink-item drink-item--right'
			-details_class='drink-details drink-details--item'
			-info_class='drink-info'
		when 3
			-hash.id= "caipiroska-de-morango"
			-item_class='container drink-item clearfix'
			-details_class='drink-details drink-details--item'
			-info_class='drink-info drink-info--right'
		when 4
			-hash.id= "shot-mel-limao"
			-item_class='container drink-item drink-item--right'
			-details_class='drink-details drink-details--item'
			-info_class='drink-info'
		when 5
			-hash.id= "pronto-para-beber"
			-item_class='container drink-item clearfix'
			-details_class='drink-details drink-details--item'
			-info_class='drink-info drink-info--right'

	section.drinks&attributes(hash)
		figure.background-shadow
			if hash.id=="caipirinha-de-limao" || hash.id=="caipiroska-de-morango" || hash.id=="pronto-para-beber"
				.container
					+content('img','image_drink', n)
			else
				+content('img','image_drink', n)
		div(class=item_class)
			+article
			+aside
			a.back-top(href="#hero")

	

mixin article(classe)
	div(class=details_class)
		header
			+content('h2','texto', n)
			+content('h3','texto', n)
		+content('li','list', n)
		+content('p','texto', n)
		+content('div','info_doses', n)
		+content('a','drink_buy', n)
mixin aside(classe)
	div(class=info_class)
		+content('div','info_difficulty', n)
		+content('div','info_value', n)
		+content('div','info_measures', n)