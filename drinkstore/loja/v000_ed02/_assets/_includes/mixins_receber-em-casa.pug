append head
	mixin link(nome)
		//-	tag link
		-var link_attr = {}
		- link_attr.href= css_dir+nome
		- link_attr.media= "screen"
		- link_attr.rel= "stylesheet"
		- link_attr.type= "text/css"
		link&attributes(link_attr)
	mixin script(nome)
		//-	tag script
		-var scr_attr = {}
		- scr_attr.src= js_dir+nome
		- scr_attr.type= "text/javascript"
		script&attributes(scr_attr)
		
mixin header
	-var video_attr={}
	-var source_attr={}
	-video_attr.class="bg_video"
	-video_attr.autoplay="autoplay"
	-video_attr.loop="loop"
	-video_attr.poster=img_dir+"header.jpg"
	-source_attr.type="video/mp4"
	-source_attr.src=media_dir+"header.mp4"
	
	video&attributes(video_attr)
		source&attributes(source_attr)
mixin menu(i)
	-var li_attr={}
	-var a_attr={}
	-var index=i
	case index
		when 1
			-li_attr.class="receber-em-casa"
			-a_attr.href="#"
			-a_text="Receber em casa"
		when 2
			-li_attr.class="no-icon"
			-a_attr.href="#tanqueray-tonic"
			-a_text="TANQUERAY Tonic"
		when 3
			-li_attr.class="no-icon"
			-a_attr.href="#ciroc-peach-collins"
			-a_text="CÎROC COLLINS"
		when 4
			-li_attr.class="no-icon"
			-a_attr.href="#red-citrus-receberemcasa"
			-a_text="Red Citrus"
		when 5
			-li_attr.class="no-icon"
			-a_attr.href="#gold-frost"
			-a_text="GOLD FROST"
		when 6
			-li_attr.class="no-icon"
			-a_attr.href="#black-julep"
			-a_text="BLACK JULEP"
	li&attributes(li_attr)
		a&attributes(a_attr)= a_text
		
mixin content(item, type, n)
	-var tag=item
	-var i = n
	-var list={}
	-var info_value={}
	-var info_measures={}
	-var info_difficulty={}
	-var info_doses={}
	-var drink_buy={}
	-var nome_drink={}
	-var texto ={}
	-var links ={}
	-var image_drink={}
	-drink_buy.class='drink-buy'
	-drink_buy_texto='comprar'
	-drink_buy.target='_blank'
	-info_doses.class='info_doses'
	case i
		when 1
			-texto.h2= "Tanqueray Tonic"
			-texto.h3= "É muito mais do que gin tônica"
			-texto.p= "Encha uma taça grande com gelo, adicione a dose de Tanqueray® e complete com a água tônica. Decore com o limão e o alecrim. "
			-drink_buy.href= "http://busca.paodeacucar.com/ppc/drinkstore_receberemcasa_tanqueraytonic"
			-nome_drink.p= "Caipirinha de Limão"
			-image_drink.src = "images/receber-em-casa/tanqueray-tonic-drink.png"
			-info_value.div= "14,99 g"
			-info_measures.div= "Grad. Alcoólica"
			-info_difficulty.div= "Fácil"
			-info_difficulty_classe= "difficulty--facil"
			-info_doses_texto= "15 doses"
			-list.li=['1 dose (50 ml) de gin Tanqueray® London Dry', '100 ml de água tônica','1 rodela de limão','1 ramo de alecrim','Gelo a gosto']
			
		when 2
			-texto.h2= "CÎROC™ Peach Collins"
			-texto.h3= "Um drink essencialmente refrescante"
			-texto.p= "Para o preparo do xarope de açúcar, coloque o açúcar em uma panela pequena com água e leve lentamente à fervura, mexendo continuamente até dissolver o açúcar. Em seguida, ferva a mistura sem mexer por 1-2 minutos. Em uma coqueteleira, adicione a dose de vodca CÎROC™ Peach, o suco de limão, o xarope de açúcar e agite bem. Coe a bebida, misture com o club soda e sirva em um copo alto com gelo, decorando com um twist de casca de limão."
			-drink_buy.href= "http://busca.paodeacucar.com/ppc/drinkstore_receberemcasa_cirocpeachcollins"
			-nome_drink.p= "Caipirinha de Limão"
			-image_drink.src = "images/receber-em-casa/ciroc-peach-collins-drink.png"
			-info_value.div= "13,8 g"
			-info_measures.div= "Grad. Alcoólica"
			-info_difficulty.div= "Médio"
			-info_difficulty_classe= "difficulty--medio"
			-info_doses_texto= "15 doses"
			-list.li=['1 dose (50ml) de vodca CÎROC™ Peach','50ml de club soda','25 ml de suco de limão siciliano','1 twist da casca de limão siciliano','Açúcar']
			
		when 3
			-texto.h2= "Red Citrus"
			-texto.h3= "Uma mistura de sabores fora do óbvio"
			-texto.p= "Encha um copo alto com gelo, adicione a dose de Johnnie Walker® Red Label® e complete com refrigerante sabor citrus."
			-drink_buy.href= "http://busca.paodeacucar.com/ppc/drinkstore_receberemcasa_redcitrus"
			-image_drink.src = "images/receber-em-casa/red-citrus-drink.png"
			-info_value.div= "15,8 g"
			-info_measures.div= "Grad. Alcoólica"
			-info_difficulty.div= "Fácil"
			-info_difficulty_classe= "difficulty--facil"
			-info_doses_texto= "20 doses"
			-list.li=['1 dose (50 ml) de Johnnie Walker® Red Label®','75 ml de refrigerante citrus','Gelo a gosto']
		when 4
			-texto.h2= "Black Julep"
			-texto.h3= "Whisky com um toque refrescante"
			-texto.p= "Prepare um xarope de açúcar (ferva uma parte de água com uma de açúcar, mexendo até dissolver, depois deixe ferver por mais 1-2 min.) e deixe esfriar. Em um copo longo, macere algumas folhas de hortelã. Acrescente o xarope de açúcar, o gelo triturado e a dose de Johnnie Walker® Black Label®. Misture delicadamente com auxílio de uma colher bailarina e decore com um ramo de hortelã."
			-drink_buy.href= "http://busca.paodeacucar.com/ppc/drinkstore_receberemcasa_blackjulep"
			-image_drink.src = "images/receber-em-casa/black-julep-drink.png"
			-info_value.div= "15.8 g"
			-info_measures.div= "Grad. Alcoólica"
			-info_difficulty.div= "Médio"
			-info_difficulty_classe= "difficulty--medio"
			-info_doses_texto= "20 doses"
			-list.li=['1 dose (50 ml) de Johnnie Walker® Black Label®','10 folhas de hortelã','Açúcar','Gelo a gosto']
		when 5
			-texto.h2= "Gold Frost"
			-texto.h3= "Refrescante e surpreendente"
			-texto.p= "Misture, em um copo alto e com gelo, o Johnnie Walker® Gold Label Reserve™ e o suco bem gelado. Para finalizar, decore com um twist de limão siciliano. "
			-drink_buy.href= "http://busca.paodeacucar.com/ppc/drinkstore_receberemcasa_goldfrost"
			-image_drink.src = "images/receber-em-casa/gold-frost-drink.png"
			-info_value.div= "15 g"
			-info_measures.div= "Grad. Alcoólica."
			-info_difficulty.div= "Fácil"
			-info_difficulty_classe= "difficulty--facil"
			-info_doses_texto= "15 doses"
			-list.li=['30 ml de Johnnie Walker® Gold Label Reserve™','150 ml de suco de maçã gelado','1 twist da casca de limão siciliano']
	
	
	-var tag_a= 'a'
	-var tag_img='img'
	-var tag_h2='h2'
	-var tag_h3='h3'
	-var tag_p='p'
	-var tag_div='div'
	-var tag_li='li'
	
	if tag== tag_li
		if type=='list'
			ul
				-var len = list.li.length
				-for(i=0;i<len;i++)
					li=list.li[i]
	if tag== tag_a
		if type=='drink_buy'
			a&attributes(drink_buy)= drink_buy_texto
	if tag== tag_div
		
		if type=='info_value'
			.value.
				#{info_value.div}
		else if type=='info_measures'
			.measures.
				#{info_measures.div}
		else if type=='info_difficulty'
			.difficulty(class=info_difficulty_classe).
				#{info_difficulty.div} 
		else if type=='info_doses'
			div&attributes(info_doses).
				1 garrafa <br />
				<span>= <br />
				#{info_doses_texto} </span> 


	if tag==tag_p && type=="nome_drink"
		p
			span •
			= (nome_drink[tag])
	else
		if type=="texto"
			#{tag}= (texto[tag])
		else if  type=="image_drink"	
			img&attributes(image_drink)/
			
				

mixin estrutura(n)
	-var hash={}
	-var i = n
	case i
		when 1
			-hash.id= "tanqueray-tonic"
			-item_class='container drink-item clearfix'
			-details_class='drink-details drink-details--item'
			-info_class='drink-info drink-info--right'
		when 2
			-hash.id= "ciroc-peach-collins"
			-item_class='container drink-item drink-item--right'
			-details_class='drink-details drink-details--item'
			-info_class='drink-info'
		when 3
			-hash.id= "red-citrus-receberemcasa"
			-item_class='container drink-item clearfix'
			-details_class='drink-details drink-details--item'
			-info_class='drink-info drink-info--right'
		when 4
			-hash.id= "black-julep"
			-item_class='container drink-item drink-item--right'
			-details_class='drink-details drink-details--item'
			-info_class='drink-info'
		when 5
			-hash.id= "gold-frost"
			-item_class='container drink-item clearfix'
			-details_class='drink-details drink-details--item'
			-info_class='drink-info drink-info--right'

	section.drinks&attributes(hash)
		figure.background-shadow
			if hash.id=="caipirinha-de-limao" || hash.id=="caipiroska-de-morango" || hash.id=="pronto-para-beber"
				.container
					+content('img','image_drink', n)
			else
				+content('img','image_drink', n)
		div(class=item_class)
			+article
			+aside
			a.back-top(href="#hero")

	

mixin article(classe)
	div(class=details_class)
		header
			+content('h2','texto', n)
			+content('h3','texto', n)
		
		+content('li','list', n)
		+content('p','texto', n)
		+content('div','info_doses', n)
		+content('a','drink_buy', n)
mixin aside(classe)
	div(class=info_class)
		+content('div','info_difficulty', n)
		+content('div','info_value', n)
		+content('div','info_measures', n)